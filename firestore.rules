rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reports Collection
    match /reports/{reportId} {
      
      // Allow anyone to read all reports for the map and community dashboard.
      allow read: if true;

      // Allow anyone to create, and update reports.
      // In a real app, you would add authentication checks here.
      allow create, update: if true;
      
      // Prevent reports from being deleted.
      allow delete: if false;
    }
  }
}
